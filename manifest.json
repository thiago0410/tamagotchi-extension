{
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "Tamagotchi Extension",
    "description": "Tamagotchi Extension",
    "author": "Tamagotchi Team",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action":{
        "default_title": "Tamagotchi",
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}